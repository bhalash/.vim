" GUI Core Options
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

" Disable audible bells.
set noerrorbells visualbell

" Font family and size.
set guifont=Source\ Code\ Pro:h12

" Make the tab bar appear in vim, not the outside GUI.
set guioptions-=e

" Hide the scrollbars.
set guioptions-=r
set guioptions-=l
