" GUI Core Options
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

" Disable audible bells.
set noerrorbells visualbell

" Font family.
set guifont=Source\ Code\ Pro\ for\ Powerline:h12,Source\ Code\ Pro:h12

" 1. Hide scrollbars (LlRr).
" 2. Use vim tabbar (e).
set guioptions-=r
set guioptions-=l
set guioptions-=e

" 1. Use vim-style dialogues (c).
set guioptions=c
